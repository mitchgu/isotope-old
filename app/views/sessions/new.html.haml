%h1

- flash.each do |key, value|
  %div(class="alert alert-#{key}")
    = value

= form_tag '/login' do
  %section
    Email or Username: #{text_field_tag :email_or_username}
  %section
    Password: #{password_field_tag :password}
  %section
    = hidden_field_tag(:redirect_to, params[:redirect_to])
    = submit_tag "Submit"
