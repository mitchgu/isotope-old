%section.left-more
  %h3 Your Tournaments
%aside.right-less

  %p Howdy, #{@current_user.username}!
  - if @current_user.is_superuser
    %p You are a superuser
  - if !@current_user.activated
    %p Your account is not activated
    = link_to "Resend activation email", resend_activation_path
  %p
    = link_to "Log out", logout_path
