%h3 Login
= form_tag login_submit_path, id: "login-form" do
  = text_field_tag :email_or_username, "", placeholder: "Email or Username"
  = password_field_tag :password, "", placeholder: "Password"
  = label_tag :remember, id: "remember-label" do
    = check_box_tag :remember
    Remember me?

  - if params.key?(:redirect_to)
    = hidden_field_tag(:redirect_to, params[:redirect_to])
  = submit_tag "Submit"
  %span.register-or-login-switch
    or
    = link_to "create a new account", register_path, id: "register-link"
