%h3 Login
= form_tag '/login', id: "login-form" do
  = text_field_tag :email_or_username, "", placeholder: "Email or Username"
  = password_field_tag :password, "", placeholder: "Password"
  = hidden_field_tag(:redirect_to, params[:redirect_to])
  = submit_tag "Submit"
  %span.register-or-login-switch
    or
    = link_to "create a new account", "/register", id: "register-link"
